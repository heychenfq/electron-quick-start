{
	"version": "0.2.0",
	"configurations": [
			{
					"type": "node",
					"request": "launch",
					"name": "Electron: Main",
					"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
					"runtimeArgs": [
						"--remote-debugging-port=9223",
						"${workspaceFolder}/scripts/main.js"
					],
					"windows": {
						"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
					},
			},
			{
					"name": "Electron: Renderer",
					"type": "chrome",
					"request": "attach",
					"port": 9223,
					"webRoot": "${workspaceFolder}",
					"timeout": 30000
			}
	],
	"compounds": [
			{
					"name": "Electron: All",
					"configurations": [
						"Electron: Renderer",
						"Electron: Main",
					]
			}
	]
}