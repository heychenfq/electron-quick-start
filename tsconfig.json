{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["ESNext", "dom"],                                        
    "jsx": "preserve",                              
    "experimentalDecorators": true,                  
    "rootDir": "./",                                 
    "moduleResolution": "node",                       
    "noEmit": true,                                   
    "newLine": "lf",                                
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,                             
    "preserveSymlinks": true,                         
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true
  }
}
